<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="ExtraText"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/user_card"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="1dp"
        android:elevation="2dp"
        app:cardCornerRadius="15dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="2dp"
                android:background="@color/colorPrimaryDark"
                android:layout_height="45dp"/>
            <RelativeLayout
                android:id="@+id/first_rel"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/profile_image_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_card_name"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:fontFamily="@font/mulireg"
                        android:textSize="10dp"
                        android:id="@+id/card_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="email"/>
                </LinearLayout>
                <TextView
                    android:background="@drawable/typetextshape"
                    android:id="@+id/user_card_type"
                    android:textSize="18dp"
                    android:textColor="@color/appOrange"
                    android:layout_width="80dp"
                    android:gravity="center"
                    android:fontFamily="@font/mulibold"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_height="40dp"
                    android:text="Type"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image_card"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/userphoto"
                    app:civ_border_width="2dp"
                    android:cropToPadding="true"
                    app:civ_border_color="@color/colorAccent"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"

                    android:focusable="true"
                    tools:targetApi="m" />
            </RelativeLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
