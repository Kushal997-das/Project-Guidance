<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.OwnerProfile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/edit_profile_layout_owner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/edit_profile"
            android:layout_margin="25dp"
            android:layout_width="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="35dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:id="@+id/card_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:elevation="2dp"
            app:cardCornerRadius="15dp"
            android:layout_height="150dp">
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/backimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/andlogo"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/visitor_profile_img"
                    android:src="@drawable/profile_round"
                    android:layout_width="80dp"
                    android:layout_centerInParent="true"
                    android:layout_height="80dp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/username_click_auth"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/username_auth_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/username_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/username_auth_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="username"
                        android:id="@+id/prof_own_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/email_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/email_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/email_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/email_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-mail"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="email"
                        android:id="@+id/prof_own_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/nickname_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/nickname_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/nicname_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/nickname_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nick Name"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="nickname"
                        android:id="@+id/prof_own_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/type_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/type_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/type_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/type_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Type"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="account type"
                        android:id="@+id/prof_own_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/address_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/location_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/loc_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/location_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="Address"
                        android:id="@+id/prof_own_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/phone_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/phone_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/phone_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/phone_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="phone"
                        android:id="@+id/prof_own_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/gender_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/gender_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/gender_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/gender_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="gender"
                        android:id="@+id/prof_own_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/birth_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/birth_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/birth_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/birth_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birth Date"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="birth date"
                        android:id="@+id/prof_own_birth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/job_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/job_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/job_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/job_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="job"
                        android:id="@+id/prof_own_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ccc"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <RelativeLayout
                android:id="@+id/id_click"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_profile_icon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/id_profile"
                    android:layout_width="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="35dp"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/id_profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Id"
                        android:fontFamily="@font/mulibold"
                        android:textColor="@color/appDark"
                        android:textSize="16dp"/>
                    <TextView
                        android:text="id"
                        android:id="@+id/prof_own_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>