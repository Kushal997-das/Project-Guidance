<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.SignUp"
    android:theme="@style/SignUpAndLoginTheme"
    android:background="@color/white"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/SignUpAndLoginTheme"
    android:background="@color/white">
    <TextView
        android:fontFamily="@font/mulibold"
        android:id="@+id/signup_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:text="Hello"/>
    <TextView
        android:fontFamily="@font/mulireg"
        app:layout_constraintTop_toBottomOf="@id/signup_txt"
        android:id="@+id/creataccounttocont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:text="Create an account to continue"/>
    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toBottomOf="@id/creataccounttocont"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/profile_image_setup"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cam"
        app:civ_border_width="2dp"
        android:cropToPadding="true"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        app:civ_border_color="@color/colorPrimaryDark"
        android:focusable="true"
        tools:targetApi="m"
        />

    <EditText
        android:singleLine="true"
        android:scrollbars="vertical"
        android:inputType="textLongMessage|textEmailAddress"
        android:maxLength="2000"
        android:maxLines="4"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:id="@+id/et_username_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/profile_image_setup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your username..."
        android:paddingRight="16dp"
        android:fontFamily="@font/mulireg"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        />
    <EditText
        android:ems="10"
        android:scrollbars="vertical"
        android:inputType="textLongMessage|textEmailAddress"
        android:maxLength="2000"
        android:maxLines="4"
        android:fontFamily="@font/mulireg"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:id="@+id/et_email_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/et_shape"
        app:layout_constraintTop_toBottomOf="@id/et_username_signup"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your e-mail..."
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        />
    <EditText
        android:textColor="@color/colorPrimaryDark"
        android:scrollbars="vertical"
        android:inputType="textImeMultiLine|textPassword"
        android:maxLength="2000"
        android:maxLines="4"
        android:fontFamily="@font/mulireg"
        android:background="@drawable/et_shape"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingRight="16dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawablePadding="16dp"
        android:paddingLeft="16dp"
        android:textColorHint="@color/colorPrimaryDark"
        android:id="@+id/et_password_signup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/et_email_signup"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter your password..." />

    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_password_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="536dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            android:fontFamily="@font/mulireg"
            android:gravity="center_vertical"
            android:text="User Type: "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <Button
        android:background="@drawable/btn_one_shape"
        android:id="@+id/signup_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/linlay"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/mulibold"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:text="Create"/>
    <Button
        android:background="@drawable/btn_two_shape"
        android:id="@+id/alreadyhave_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/signup_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/white"
        android:fontFamily="@font/mulibold"
        android:textSize="16dp"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:text="Already have account? Login"/>
    <TextView
        android:id="@+id/textsign"
        app:layout_constraintTop_toBottomOf="@id/alreadyhave_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/mulireg"
        android:textAlignment="center"
        android:text="Start as a visitor or an owner of co-working space"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>