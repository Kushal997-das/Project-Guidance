<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ui.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:elevation="10dp"
            android:id="@+id/head_lin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/head_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

        </RelativeLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/user_img_main_page"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/user"
            app:civ_border_width="5dp"
            android:cropToPadding="true"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            app:civ_border_color="#b5c9d0"
            android:focusable="true"
            android:clickable="true"
            tools:targetApi="m" />
        <FrameLayout
            app:layout_constraintTop_toBottomOf="@+id/user_img_main_page"
            android:layout_width="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/itemslin"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mainName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tawfik Yasser"
                        android:textColor="@color/appDark"
                        android:layout_gravity="center"
                        android:textSize="20dp"
                        android:fontFamily="@font/mulibold"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:textColor="@color/colorPrimaryDark"
                        android:id="@+id/user_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/mulireg"
                        android:text="Status"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:background="#ccc"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/adding_psot"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:layout_height="wrap_content">
                        <Button
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/btn_two_shape"
                            android:id="@+id/add_post_icon_btn"
                            android:layout_width="250dp"
                            android:layout_height="50dp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/mulibold"
                            android:textSize="16dp"
                            android:textAllCaps="false"
                            android:text="Post"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/home_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/home_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/dashboard"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Timeline"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/home_icon"
                            android:textSize="16dp"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/profile_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/usermain"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:id="@+id/profile_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Profile"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/profile_icon"
                            android:textSize="16dp"/>
                        <ImageView
                            android:visibility="invisible"
                            android:id="@+id/verification_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/checklist"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/users_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/users_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/users"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Users"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/users_icon"
                            android:textSize="16dp"/>
                        <TextView
                            android:text=""
                            android:textColor="@color/colorPrimaryDark"
                            android:fontFamily="@font/mulibold"
                            android:visibility="visible"
                            android:id="@+id/number_users"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/start_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/start"
                            android:layout_centerVertical="true"
                            android:src="@drawable/start"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/start"
                            android:textSize="16dp"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/settings_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/settings_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/settings"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/settings_icon"
                            android:textSize="16dp"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/info_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/info_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/info"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Info"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/info_icon"
                            android:textSize="16dp"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/help_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/help_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/help"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Help"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/appDark"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/help_icon"
                            android:textSize="16dp"/>

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ccc"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="25dp"/>
                    <RelativeLayout
                        android:id="@+id/logout_click"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/logout_icon"
                            android:layout_centerVertical="true"
                            android:src="@drawable/logout"
                            android:layout_width="35dp"
                            android:layout_marginLeft="25dp"
                            android:layout_height="35dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:fontFamily="@font/mulibold"
                            android:textColor="@color/red"
                            android:layout_marginLeft="25dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/logout_icon"
                            android:textSize="16dp"/>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>